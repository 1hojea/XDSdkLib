<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.txwy.and.snqx.MainActivity">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/layout_2"
        android:orientation="vertical">

        <Button
            android:id="@+id/Button_Guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guest Login Test" />

        <Button
            android:id="@+id/Button_Google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google Login Test" />

        <Button
            android:id="@+id/Button_Xdg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XD Global Login Test" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextView_queryResult"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Hello World!" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/layout_1"
        tools:layout_editor_absoluteY="144dp">

        <Button
            android:id="@+id/Button_CopyQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copy Query" />

        <Button
            android:id="@+id/Button_Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>